{
    "manifest_version": 2,
    "name": "My OpenAI Extension",
    "version": "1.0.0",
    "description": "A Chrome extension that generates OpenAI responses based on user-highlighted text.",
    "permissions": [
        "activeTab",
        "https://api.openai.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content2.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "My OpenAI Extension"
    }
}